<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageDrink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/drinkAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:text="음료명"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="수량"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="가격"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/dirnk1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="17dp"
            android:gravity="center"
        android:layout_weight="1"
        android:text="콜라"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
        android:id="@+id/drink1_count"
        android:layout_weight="1.5"
        android:hint="수량"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink1_price"
            android:layout_weight="1.5"
            android:hint="가격"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/drink2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="사이다"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink2_count"
            android:layout_weight="1.5"
            android:hint="수량"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink2_price"
            android:layout_weight="1.5"
            android:hint="가격"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/drink3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="탐스"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink3_count"
            android:layout_weight="1.5"
            android:hint="수량"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink3_price"
            android:layout_weight="1.5"
            android:hint="가격"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/drink4"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="솔의눈"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink4_count"
            android:layout_weight="1.5"
            android:hint="수량"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:gravity="center"
            android:id="@+id/drink4_price"
            android:layout_weight="1.5"
            android:hint="가격"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_count_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="확인" />
        <Button
            android:id="@+id/btn_count_cancel"
            android:layout_weight="1"
            android:text="취소"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>